manifest {
    mainScript = "main.nf"
    defaultBranch = "master"
    nextflowVersion = ">=20.07.0"
}



params {
    pipeline_name = ""
    conda_env = "mlbd"

    run = false
    run_conditions_file = ""
    run_pipeline = ""
    run_profiles = ""
    run_output_dir = ""
    run_trace_file = ""
    run_trials = 1

    aggregate = false

    train = false
    train_merge_arg = null
    train_inputs = [:]
    train_targets = ["runtime_hr", "memory_GB", "disk_GB"]
    train_scaler = "maxabs"
    train_model_type = "mlp"

    predict = false
    predict_targets = ["runtime_hr", "memory_GB", "disk_GB"]
    predict_process = null
    predict_inputs = null
}



process {
    errorStrategy = "terminate"
}



profiles {
    standard {
        process {
            executor = "local"
            cpus = 1
            memory = 4.GB
        }
        executor {
            queueSize = 1
        }
    }
}
